<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.teach.teach10zl.view.activity.BindThirdAccountActivity">

    <include layout="@layout/common_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@drawable/shape_gray_bind_third_bg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/ic_person_grey"/>
        <View android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_16"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_10"/>
        <EditText
            android:id="@+id/user_name_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_13"
            android:background="@null"
            android:textColor="@color/font_color_light"
            android:hint="请输入您的账号"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@drawable/shape_gray_bind_third_bg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/ic_password_grey"/>
        <View android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_16"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_10"/>
        <EditText
            android:id="@+id/pwd_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_13"
            android:background="@null"
            android:textColor="@color/font_color_light"
            android:hint="请输入您的密码"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/shape_red_radius_bg"
        android:text="绑定"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:onClick="bindClick"/>
</LinearLayout>
