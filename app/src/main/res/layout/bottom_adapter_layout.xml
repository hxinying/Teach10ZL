<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_10">

    <com.teach.teach10zl.view.customs.RoundOrCircleImage
        android:id="@+id/bottom_image"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="round" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/font_color_light"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/bottom_image"
        app:layout_constraintLeft_toRightOf="@+id/bottom_image"
        app:layout_constraintTop_toTopOf="@id/bottom_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/font_color_dark"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintLeft_toLeftOf="@id/description" />

    <TextView
        android:id="@+id/lesson_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="@id/description"
        app:layout_constraintTop_toBottomOf="@+id/description" />
</androidx.constraintlayout.widget.ConstraintLayout>